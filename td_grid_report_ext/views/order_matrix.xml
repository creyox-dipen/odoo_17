<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="grid_report_sale_order_inherit_id" inherit_id="sale.report_saleorder_document">

        <!-- Hide the entire table if no lines meet our conditions -->
        <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']" position="attributes">
            <attribute name="t-if">any(line.product_add_mode == 'configurator' or line.verify_order() for line in lines_to_report if not line.display_type)</attribute>
        </xpath>

        <!-- Replace the entire row to have better control -->
        <xpath expr="//tbody/t[@t-foreach='lines_to_report']/tr[1]" position="replace">
            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                <t t-if="not line.display_type and (line.product_add_mode == 'configurator' or line.verify_order())">
                    <td name="td_name">
                        <span t-field="line.name">Bacon Burger</span>
                    </td>
                    <td name="td_quantity" class="text-end">
                        <span t-field="line.product_uom_qty">3</span>
                        <span t-field="line.product_uom">units</span>
                        <span t-if="line.product_packaging_id">
                            (<span t-field="line.product_packaging_qty" t-options='{"widget": "integer"}'/> <span t-field="line.product_packaging_id"/>)
                        </span>
                    </td>
                    <td name="td_priceunit" class="text-end">
                        <span t-field="line.price_unit">3</span>
                    </td>
                    <td t-if="display_discount" class="text-end">
                        <span t-field="line.discount">-</span>
                    </td>
                    <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_id])"/>
                    <td name="td_taxes" t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                        <span t-out="taxes">Tax 15%</span>
                    </td>
                    <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                        <span t-field="line.price_subtotal">27.00</span>
                    </td>
                </t>
                <t t-elif="line.display_type == 'line_section'">
                    <td name="td_section_line" colspan="99">
                        <span t-field="line.name">A section title</span>
                    </td>
                    <t t-set="current_section" t-value="line"/>
                    <t t-set="current_subtotal" t-value="0"/>
                </t>
                <t t-elif="line.display_type == 'line_note'">
                    <td name="td_note_line" colspan="99">
                        <span t-field="line.name">A note, whose content usually applies to the section or product above.</span>
                    </td>
                </t>
            </tr>
        </xpath>

    </template>

    <template id="matrix_inherit_with_totals" inherit_id="product_matrix.matrix">
        <xpath expr="//table" position="replace">
            <table t-else="" class="o_view_grid o_product_variant_grid table table-sm table-striped table-bordered">
                <t t-set="col_span" t-value="len(grid['header'])"/>
                <thead>
                    <tr style="background-color:#000000;color:#FFFFFF;">
                        <th t-att-colspan="(int(col_span / 3) if int(col_span / 3) > 0 else None)" style="text-align:left;font-size: 16px;">
                            <t t-esc="grid['header'][0]['name']"/>
                        </th>
                        <th t-att-colspan="(int(col_span / 3) if int(col_span / 3) > 0 else None)" style="text-align:right;font-size: 20px;">
                            Quantity:&#160;&#160;
                            <t t-out="grid['total_qty']"/>
                        </th>
                        <th t-att-colspan="(int(col_span / 3) + int(col_span % 3) if int(col_span / 3) > 0 else None)"  style="text-align:right;font-size: 20px;">
                            SubTotal:&#160;&#160;
                            <t t-out="grid['total_subtotal']"/>
                        </th>
                    </tr>
                    <tr>
                        <t t-set="td_count" t-value="0"/>
                        <t t-foreach="grid['header']" t-as="column_header">
                            <t t-set="td_count" t-value="int(td_count) + 1"/>
                            <th class="o_grid_title_header text-center" t-att-colspan="2 if (int(col_span / 3) == 0 and column_header_last) else None">
                                <t t-if="int(td_count) != 1">
                                    <span t-esc="column_header['name']"/>
                                </t>
                                <t t-call="product_matrix.extra_price">
                                    <t t-set="price" t-value="column_header.get('price', False)"/>
                                </t>
                            </th>
                        </t>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="grid['matrix']" t-as="row">
                        <tr>
                            <t t-foreach="row" t-as="cell">
                                <td t-if="cell.get('name', False)" class="text-start" t-att-colspan="2 if cell_last else None">
                                    <strong t-esc="cell['name']"/>
                                    <t t-call="product_matrix.extra_price">
                                        <t t-set="price" t-value="cell.get('price', False)"/>
                                    </t>
                                </td>
                                <td t-else="" class="text-end" t-att-colspan="2 if cell_last else None">
                                    <span t-esc="cell.get('qty', 0)" class="o_grid_cell_container"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>