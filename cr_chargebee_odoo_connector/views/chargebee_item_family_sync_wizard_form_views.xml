<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Action -->
    <record id="action_chargebee_item_families_wizard" model="ir.actions.act_window">
        <field name="name">Sync Item Families Wizard</field>
        <field name="res_model">chargebee.item.family.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_chargebee_item_family_sync_wizard_form" model="ir.ui.view">
        <field name="name">chargebee.item.family.sync.wizard.form</field>
        <field name="model">chargebee.item.family.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Sync Chargebee Item Families">
                <group>
                    <field name="message" readonly="1"/>
                </group>
                <footer>
                    <button string="Sync" type="object" name="action_sync" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
