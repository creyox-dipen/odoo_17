<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- Define the server action for exporting to Chargebee -->
        <record id="action_export_product_to_chargebee" model="ir.actions.server">
            <field name="name">Create in Chargebee</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">action = records.create_item_in_chargebee()
            </field>
        </record>
</odoo>
